'use client';
import { formatNumber } from "@/lib/format";

import { useState, useEffect } from 'react';
import { useCreateBet, useUpdateBet } from '@/hooks/use-bets';
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { Textarea } from '@/components/ui/textarea';
import { Loader2, X } from 'lucide-react';

interface BetFormProps {
  mode?: 'create' | 'edit';
  initialData?: {
    id?: number;
    match_id?: string;
    outcome?: string;
    bookmaker?: string;
    odds_value?: number;
    stake?: number;
    bet_type?: string;
    notes?: string;
  };
  onSuccess?: () => void;
  onCancel?: () => void;
}

const BOOKMAKERS = [
  'Betclic',
  'Unibet',
  'Winamax',
  'Betsson',
  'ParionsSport',
  'Betfair',
  'PokerStars',
];

const BET_TYPES = [
  { value: 'tabac', label: 'üè™ Tabac (Manuel)' },
  { value: 'ligne', label: 'üì± Ligne (Auto)' },
  { value: 'value', label: 'üíé Value Bet' },
  { value: 'arbitrage', label: '‚öñÔ∏è Arbitrage' },
];

export function BetForm({ mode = 'create', initialData, onSuccess, onCancel }: BetFormProps) {
  const createBet = useCreateBet();
  const updateBet = useUpdateBet();

  // Form state
  const [formData, setFormData] = useState({
    match_id: initialData?.match_id || '',
    outcome: initialData?.outcome || '',
    bookmaker: initialData?.bookmaker || '',
    odds_value: initialData?.odds_value?.toString() || '',
    stake: initialData?.stake?.toString() || '',
    bet_type: initialData?.bet_type || 'tabac',
    notes: initialData?.notes || '',
  });

  const [errors, setErrors] = useState<Record<string, string>>({});

  // Validation
  const validate = (): boolean => {
    const newErrors: Record<string, string> = {};

    if (!formData.match_id.trim()) {
      newErrors.match_id = 'Match ID requis';
    }
    if (!formData.outcome.trim()) {
      newErrors.outcome = 'Pronostic requis';
    }
    if (!formData.bookmaker) {
      newErrors.bookmaker = 'Bookmaker requis';
    }
    
    const odds = parseFloat(formData.odds_value);
    if (!formData.odds_value || isNaN(odds) || odds <= 1) {
      newErrors.odds_value = 'Cote invalide (> 1.00)';
    }

    const stake = parseFloat(formData.stake);
    if (!formData.stake || isNaN(stake) || stake <= 0) {
      newErrors.stake = 'Mise invalide (> 0)';
    }

    setErrors(newErrors);
    return Object.keys(newErrors).length === 0;
  };

  // Handle submit
  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    if (!validate()) return;

    const payload = {
      match_id: formData.match_id,
      outcome: formData.outcome,
      bookmaker: formData.bookmaker,
      odds_value: parseFloat(formData.odds_value),
      stake: parseFloat(formData.stake),
      bet_type: formData.bet_type as any,
      notes: formData.notes || undefined,
    };

    try {
      if (mode === 'create') {
        await createBet.mutateAsync(payload);
      } else if (initialData?.id) {
        await updateBet.mutateAsync({
          id: initialData.id,
          payload: {
            ...payload,
            status: 'active',
          },
        });
      }
      onSuccess?.();
    } catch (error) {
      console.error('Erreur lors de la sauvegarde:', error);
    }
  };

  const isLoading = createBet.isPending || updateBet.isPending;

  return (
    <Card>
      <CardHeader>
        <div className="flex items-center justify-between">
          <div>
            <CardTitle>
              {mode === 'create' ? 'üéØ Nouveau Pari' : '‚úèÔ∏è Modifier le Pari'}
            </CardTitle>
            <CardDescription>
              {mode === 'create'
                ? 'Cr√©er un nouveau pari dans le syst√®me'
                : 'Modifier les informations du pari'}
            </CardDescription>
          </div>
          {onCancel && (
            <Button variant="ghost" size="icon" onClick={onCancel}>
              <X className="h-4 w-4" />
            </Button>
          )}
        </div>
      </CardHeader>
      <CardContent>
        <form onSubmit={handleSubmit} className="space-y-4">
          {/* Match ID */}
          <div className="space-y-2">
            <Label htmlFor="match_id">Match ID *</Label>
            <Input
              id="match_id"
              placeholder="ex: PSG-OL-20231113"
              value={formData.match_id}
              onChange={(e) => setFormData({ ...formData, match_id: e.target.value })}
              className={errors.match_id ? 'border-red-500' : ''}
            />
            {errors.match_id && (
              <p className="text-sm text-red-500">{errors.match_id}</p>
            )}
          </div>

          {/* Outcome */}
          <div className="space-y-2">
            <Label htmlFor="outcome">Pronostic *</Label>
            <Input
              id="outcome"
              placeholder="ex: PSG gagne, +2.5 buts, etc."
              value={formData.outcome}
              onChange={(e) => setFormData({ ...formData, outcome: e.target.value })}
              className={errors.outcome ? 'border-red-500' : ''}
            />
            {errors.outcome && (
              <p className="text-sm text-red-500">{errors.outcome}</p>
            )}
          </div>

          {/* Grid 2 columns */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            {/* Bookmaker */}
            <div className="space-y-2">
              <Label htmlFor="bookmaker">Bookmaker *</Label>
              <Select
                value={formData.bookmaker}
                onValueChange={(value) => setFormData({ ...formData, bookmaker: value })}
              >
                <SelectTrigger className={errors.bookmaker ? 'border-red-500' : ''}>
                  <SelectValue placeholder="S√©lectionner" />
                </SelectTrigger>
                <SelectContent>
                  {BOOKMAKERS.map((bk) => (
                    <SelectItem key={bk} value={bk}>
                      {bk}
                    </SelectItem>
                  ))}
                </SelectContent>
              </Select>
              {errors.bookmaker && (
                <p className="text-sm text-red-500">{errors.bookmaker}</p>
              )}
            </div>

            {/* Bet Type */}
            <div className="space-y-2">
              <Label htmlFor="bet_type">Type de pari</Label>
              <Select
                value={formData.bet_type}
                onValueChange={(value) => setFormData({ ...formData, bet_type: value })}
              >
                <SelectTrigger>
                  <SelectValue />
                </SelectTrigger>
                <SelectContent>
                  {BET_TYPES.map((type) => (
                    <SelectItem key={type.value} value={type.value}>
                      {type.label}
                    </SelectItem>
                  ))}
                </SelectContent>
              </Select>
            </div>
          </div>

          {/* Grid 2 columns */}
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            {/* Odds */}
            <div className="space-y-2">
              <Label htmlFor="odds_value">Cote *</Label>
              <Input
                id="odds_value"
                type="number"
                step="0.01"
                placeholder="ex: 2.15"
                value={formData.odds_value}
                onChange={(e) => setFormData({ ...formData, odds_value: e.target.value })}
                className={errors.odds_value ? 'border-red-500' : ''}
              />
              {errors.odds_value && (
                <p className="text-sm text-red-500">{errors.odds_value}</p>
              )}
            </div>

            {/* Stake */}
            <div className="space-y-2">
              <Label htmlFor="stake">Mise (‚Ç¨) *</Label>
              <Input
                id="stake"
                type="number"
                step="0.01"
                placeholder="ex: 50"
                value={formData.stake}
                onChange={(e) => setFormData({ ...formData, stake: e.target.value })}
                className={errors.stake ? 'border-red-500' : ''}
              />
              {errors.stake && (
                <p className="text-sm text-red-500">{errors.stake}</p>
              )}
            </div>
          </div>

          {/* Gain potentiel */}
          {formData.odds_value && formData.stake && (
            <div className="p-3 bg-blue-500/10 border border-blue-500/50 rounded-lg">
              <p className="text-sm text-blue-400">
                üí∞ Gain potentiel :{' '}
                <span className="font-bold">
                  {(parseFloat(formData.odds_value) * parseFloat(formData.stake)).toFixed(2)}‚Ç¨
                </span>
                {' '}(+{(parseFloat(formData.odds_value) * parseFloat(formData.stake) - parseFloat(formData.stake)).toFixed(2)}‚Ç¨)
              </p>
            </div>
          )}

          {/* Notes */}
          <div className="space-y-2">
            <Label htmlFor="notes">Notes (optionnel)</Label>
            <Textarea
              id="notes"
              placeholder="Ajoutez des notes sur ce pari..."
              value={formData.notes}
              onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
              rows={3}
            />
          </div>

          {/* Actions */}
          <div className="flex gap-3 pt-4">
            {onCancel && (
              <Button type="button" variant="outline" onClick={onCancel} className="flex-1">
                Annuler
              </Button>
            )}
            <Button type="submit" disabled={isLoading} className="flex-1">
              {isLoading ? (
                <>
                  <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  Enregistrement...
                </>
              ) : mode === 'create' ? (
                '‚úÖ Cr√©er le pari'
              ) : (
                'ÔøΩÔøΩ Sauvegarder'
              )}
            </Button>
          </div>
        </form>
      </CardContent>
    </Card>
  );
}
